@model List<Dish>

@foreach (Dish i in Model) // карточка блюда 
{
<div class="col-lg-6 col-md-6 col-sm-6">
    <div class="product">
        <div class="product__inner">
            <div class="pro__thumb">
                <a data-toggle="modal" data-target="#productModal" title="Quick View" class="quick-view modal-view detail-link" href="#">
                    <img class="product_image" src="@i.Img" alt="product images">
                </a>
            </div>
            <div class="product__hover__info">
                <ul class="product__action">
                    <li><a title="Add TO Cart" href="#buy"><span class="ti-shopping-cart" id="@i.Id"></span></a></li>
                    <a href="">@i.Calorie калорий (100 гр)</a>
                    <br />
                    <a href="">@i.Protein% белков</a>
                    <br />
                    <a href="">@i.Fat% жиров</a>
                    <br />
                    <a href="">@i.Carbohydrate% углеводов</a>
                </ul>
            </div>
        </div>
        <div class="product__details">
            <h1 class="float-left-style">@i.Title</h1>
            <!--                                                         <h3 class="price">Цена</h3>
             -->
            <div class="row" id="t_@i.Id">
                <div class="col-sm-9">
                    <div class="tabs">
                        @foreach (SizePrice j in @i.SizePrice)
                        {
                            <input type="radio" name="inset_@i.Id" value="@j.Price" id="@j.Id" class="@i.Id">
                            <label for="@j.Id">@j.Size г</label>
                        }

                        <br />
                        <br />
                        <h3 id="price_@i.Id" class="price text-left" style="margin-left: 5%;"></h3>
                    </div>
                </div>
                <h2><a title="Add TO Cart" href="#buy"><span id="none" class="ti-shopping-cart float-left-style">Купить</span></a></h2>
            </div>
        </div>
    </div>
</div>
}